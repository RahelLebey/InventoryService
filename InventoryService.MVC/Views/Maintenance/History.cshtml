@model List<InventoryService.MVC.Models.RepairHistoryViewModel>

@{
    ViewData["Title"] = "Vehicle Repair History";
}

<h2>Vehicle Repair History</h2>

<form asp-action="History" method="post">
    <div class="form-group">
        <label for="vehicleId">Vehicle ID</label>
        <input type="number"
               id="vehicleId"
               name="vehicleId"
               class="form-control"
               min="1"
               value="@(ViewBag.VehicleId ?? "")"
               required />
    </div>

    <button type="submit" class="btn btn-primary mt-2">
        View History
    </button>
</form>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger mt-3">
        @ViewBag.Error
    </div>
}

<hr />

@if (Model != null && Model.Any())
{
    <table class="table table-bordered mt-3">
        <thead>
            <tr>
                <th>Date</th>
                <th>Description</th>
                <th>Cost</th>
                <th>Performed By</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var repair in Model)
            {
                <tr>
                    <td>@repair.RepairDate.ToShortDateString()</td>
                    <td>@repair.Description</td>
                    <td>@repair.Cost.ToString("C")</td>
                    <td>@repair.PerformedBy</td>
                </tr>
            }
        </tbody>
    </table>
}
else if (ViewBag.VehicleId != null)
{
    <p class="mt-3">No repair history found for this vehicle.</p>
}
